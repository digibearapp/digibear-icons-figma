{
    "name": "digibear-icons-figma",
    "version": "1.0.0",
    "description": "High-quality icon library",
    "license": "ISC",
    "scripts": {
        "generate-metadata": "node ./bin/generate.mjs",
        "build": "webpack --mode=production",
        "build:watch": "webpack --mode=development --watch",
        "prettier:format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,json}' ",
        "update-git": "git add . && git commit -m $npm_package_version && git push"
    },
    "dependencies": {
        "@digibearapp/digibear-common-types": "^1.0.6",
        "@digibearapp/digibear-icons-react": "^1.0.4",
        "@digibearapp/digibear-svg-icons": "^1.0.5",
        "fuse.js": "^6.5.3",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-virtuoso": "^2.4.0",
        "styled-components": "^5.3.3",
        "use-debounce": "^7.0.1"
    },
    "devDependencies": {
        "@figma/plugin-typings": "^1.24.0",
        "@types/react": "^17.0.11",
        "@types/react-dom": "^17.0.7",
        "css-loader": "^5.0.1",
        "html-webpack-inline-source-plugin": "^0.0.10",
        "html-webpack-plugin": "^3.2.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "prettier": "^2.3.1",
        "style-loader": "^2.0.0",
        "ts-loader": "^8.0.11",
        "typescript": "^4.1.2",
        "url-loader": "^4.1.1",
        "webpack": "^4.41.4",
        "webpack-cli": "^3.3.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,css,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "resolutions": {
        "styled-components": "^5"
    }
}
